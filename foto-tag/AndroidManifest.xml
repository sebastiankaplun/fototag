        android:label="@string/label_app_name"
        android:name=".FotoTagApplication">
        <activity android:name=".activity.HomeActivity" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.SplashActivity" android:screenOrientation="landscape"/>
        <activity android:name=".activity.PictureActivity" android:screenOrientation="landscape"/>
        <activity android:name=".activity.ListedPicturesActivity" android:screenOrientation="landscape"/>
        <activity android:theme="@android:style/Theme.Dialog" android:name=".activity.ListedDevicesActivity" android:screenOrientation="landscape"/>
        <activity android:name="ar.com.moobile.fototag.activity.BrowseActivity" android:screenOrientation="landscape"/>
        <activity android:name="ar.com.moobile.fototag.activity.PrintDialogActivity" android:screenOrientation="landscape"/>
